<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="default" extends="struts-default">
        <action name="login" class="login">
            <result name="success">main.jsp</result>
            <result name="error">index.jsp</result>
        </action>
        <action name="register" class="login" method="register">
            <result name="success">main.jsp</result>
            <result name="error">index.jsp</result>
        </action>
        <action name="addBook" class="book" method="addBook">
            <result name="success">addBook.jsp</result>
            <result name="error">addBook.jsp</result>
            <result name="input">addBook.jsp</result>
        </action>
        <action name="modifyBook" class="book" method="modifyBook">
            <result name="success">modifyBook.jsp</result>
            <result name="error">modifyBook.jsp</result>
            <result name="input">modifyBook.jsp</result>
        </action>
        <action name="findBook" class="book" method="findBook">
            <result name="success">findBook.jsp</result>
            <result name="error">findBook.jsp</result>
            <result name="input">findBook.jsp</result>
        </action>
        <action name="findAllToPage" class="book" method="findAllToPage">
            <result name="success">bookList.jsp</result>
            <result name="error">bookListError.jsp</result>
        </action>
        <action name="delete" class="book" method="deleteBook">
            <result name="success" type="redirectAction">
                <param name="actionName">findAllToPage</param>
            </result>
        </action>
        <action name="logout" class="login" method="logout">
            <result name="input" type="dispatcher">
                <param name="location">/index.jsp</param>
            </result>
            <!--<result name="input">/index.jsp</result>-->
        </action>
        <action name="showIntro" class="book" method="showIntro">
            <result name="success">showIntro.jsp</result>
        </action>
        <action name="showBookToLend" class="lendBook" method="showBookToLend">
            <result name="success">showBookToLend.jsp</result>
            <result name="error">main.jsp</result>
        </action>
        <action name="findBookToLend" class="lendBook" method="findBookToLend">
            <result name="success">showBookToLend.jsp</result>
            <result name="error">showBookToLend.jsp</result>
        </action>
    </package>
</struts>