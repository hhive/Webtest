<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="default" extends="struts-default">
        <action name="login" class="action.LoginAction" method="login">
            <result name="success">/main.jsp</result>
            <result name="error">/index.jsp</result>
            <result name="input">/index.jsp</result>
            <!--<result type="redirectAction"></result>-->
        </action>
        <action name="addBook" class="action.BookManageAction" method="addBook">
            <result name="success">/bookManage/addBook.jsp</result>
            <result name="error">/bookManage/addBook.jsp</result>
            <result name="input">/bookManage/addBook.jsp</result>
        </action>
        <action name="modifyBook" class="action.BookManageAction" method="modifyBook">
            <result name="success">/bookManage/modifyBook.jsp</result>
            <result name="error">/bookManage/modifyBook.jsp</result>
        </action>
        <action name="findBook" class="action.BookManageAction" method="findBook">
            <result name="success">/searchBook/findSuccess.jsp</result>
            <result name="error">/searchBook/findError.jsp</result>
            <result name="input">/searchBook/findBook.jsp</result>
        </action>
        <action name="findAllBook" class="action.BookManageAction" method="findAllBook">
            <result name="success">/searchBook/bookList.jsp</result>
            <result name="error">/searchBook/bookListError.jsp</result>
        </action>
        <action name="findAllToPage" class="action.BookManageAction" method="findAllToPage">
            <result name="success">/searchBook/bookList.jsp</result>
            <result name="error">/searchBook/bookListError.jsp</result>
        </action>
        <action name="delete" class="action.BookManageAction" method="deleteBook">
            <result name="success">/bookManage/deleteSuccess.jsp</result>
            <result name="error">/bookManage/deleteError.jsp</result>
        </action>
        <action name="logout" class="action.LoginAction" method="logout">
            <result name="input" type="dispatcher">
                <param name="location">/index.jsp</param>
            </result>
            <!--<result name="input">/index.jsp</result>-->
        </action>
    </package>
</struts>