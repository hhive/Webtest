<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="default" extends="struts-default">
        <action name="login" class="action.LoginAction" method="login">
            <result name="success">/main.jsp</result>
            <result name="error">/index.jsp</result>
            <result name="input">/index.jsp</result>
        </action>
        <action name="addBook" class="action.BookManageAction" method="addBook">
            <result name="success">addSuccess.jsp</result>
            <result name="error">addError.jsp</result>
            <result name="input">/addBook.jsp</result>
        </action>
        <action name="findBook" class="action.BookManageAction" method="findBook">
            <result name="success">findSuccess.jsp</result>
            <result name="error">findError.jsp</result>
            <result name="input">/findBook.jsp</result>
        </action>
        <action name="logout" class="action.LoginAction" method="logout">
            <result name="input" type="dispatcher">
                <param name="location">/index.jsp</param>
            </result>
            <!--<result name="input">/index.jsp</result>-->
        </action>
    </package>
</struts>